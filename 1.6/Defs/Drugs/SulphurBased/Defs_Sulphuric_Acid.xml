<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>MSSulphuricAcid</defName>
    <label>Sulphuric Acid</label>
    <description>Sulphuric acid (alternative spelling sulfuric acid), also known as vitriol, is a mineral acid composed of the elements sulfur, oxygen and hydrogen, with molecular formula H2SO4. It is a colorless, odorless, and syrupy liquid that is soluble in water and is synthesized in reactions that are highly exothermic. Used as a precursor chemical to form other items. (Made from Sulphur).</description>
    <graphicData>
      <texPath>Things/Item/SulphuricAcid</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <!-- <drawSize>0.90</drawSize> -->
    </graphicData>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>7.5</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <techLevel>Industrial</techLevel>
    <thingCategories>
      <li>MSManufactured</li>
    </thingCategories>
  </ThingDef>
  <!-- ============= Recipes ===================== -->
  <RecipeDef>
    <defName>MakeMSSulphuricAcid</defName>
    <label>Make Sulphuric Acid</label>
    <description>Make 5 Sulphuric Acid.</description>
    <jobString>Preparing Sulphuric Acid.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>500</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSSulphur</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSSulphur</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSSulphuricAcid>5</MSSulphuricAcid>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>3</Intellectual>
    </skillRequirements>
    <researchPrerequisite>DrugProduction</researchPrerequisite>
  </RecipeDef>
  <!-- ===== Bulk Recipe ===== -->
  <RecipeDef>
    <defName>MakeBulkMSSulphuricAcid</defName>
    <label>Make Sulphuric Acid in bulk</label>
    <description>Make 25 Sulphuric Acid.</description>
    <jobString>Preparing Sulphuric Acid.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2500</workAmount>
    <targetCountAdjustment>25</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSSulphur</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSSulphur</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSSulphuricAcid>25</MSSulphuricAcid>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>4</Intellectual>
    </skillRequirements>
    <researchPrerequisite>DrugProduction</researchPrerequisite>
  </RecipeDef>
</Defs>
