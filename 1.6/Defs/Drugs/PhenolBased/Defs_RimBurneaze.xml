      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSRimBurnEaze>1</MSRimBurnEaze>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
