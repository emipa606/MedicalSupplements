<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Rimpeptic ==================== -->
  <ThingDef ParentName="MSDrugFluidBase">
    <defName>MSRimpeptic</defName>
    <label>Rimpeptic</label>
    <description>Rimpeptic is a drug designed to be taken in response to aquiring food poisoning or gut worms and helps to settle the stomach. It can help to alleviate the effects of food poisoning a little but won't stop the process, for Gut worms however, it can help reduce the tended duration associated with this illness, there is also the potential (if slight) for this drug to even cure this illness if the tend quality is high enough. Taken daily in response to conditions.</description>
    <graphicData>
      <texPath>Things/Item/MSRimpeptic</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>20.7</MarketValue>
      <Mass>0.04</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSRimpepticHigh</hediffDef>
          <severity>1</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1586</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSRimpepticHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Rimpeptic</label>
    <description>Rimpeptic effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <restFallFactor>1.12</restFallFactor>
        <makeImmuneTo>
          <li>FoodPoisoning</li>
          <li>GutWorms</li>
        </makeImmuneTo>
        <!-- <label>feels healthier</label> -->
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>+0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.02</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <postFactor>1.5</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>ThoughtMSRimpeptic</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSRimpepticHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Rimpeptic</label>
        <description>makes my stomach feel a little settled</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
