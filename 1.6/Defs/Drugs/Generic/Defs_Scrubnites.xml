<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ========== Scrubnites ==================== -->
  <ThingDef ParentName="MSDrugInjectBase">
    <defName>MSScrubnites</defName>
    <label>Scrubnites Injection</label>
    <description>Scrubnites are a modified version of Antinites that specifically remove the effects of addictions. It effects last for 3 days and the pain levels associated with the treatment are somewhat reduced in comparison to Antinites.</description>
    <graphicData>
      <texPath>Things/Item/MSScrubnites/MSScrubnites</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>20</stackLimit>
    <statBases>
      <MarketValue>650</MarketValue>
      <Mass>0.32</Mass>
      <WorkToMake>100</WorkToMake>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSScrubnitesHigh</hediffDef>
          <severity>3.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1560</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>MSStimLab</li>
      </recipeUsers>
      <researchPrerequisite>MSAntinites</researchPrerequisite>
      <skillRequirements>
        <Intellectual>10</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <MSAntinites_Vial>1</MSAntinites_Vial>
      <MSInjector_Unit>1</MSInjector_Unit>
      <MSUnhook>4</MSUnhook>
      <Uranium>1</Uranium>
    </costList>
    <tradeability>None</tradeability>
  </ThingDef>
  <HediffDef>
    <defName>MSScrubnitesHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Scrubnites</label>
    <description>Scrubnites Effect</description>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>3.0</maxSeverity>
    <isBad>false</isBad>
    <lethalSeverity>-1.0</lethalSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
      <li Class="MSAddict.HediffCompProperties_MSAddict">
        <AddictionLossPerHour>0.2</AddictionLossPerHour>
        <ToleranceLossPerHour>0.1</ToleranceLossPerHour>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.06</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <minSeverity>1.0</minSeverity>
        <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.07</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.08</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.06</offset>
          </li>
        </capMods>
      </li>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <minSeverity>2.0</minSeverity>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.12</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.07</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!-- ===== Bulk Recipe ========= -->
  <RecipeDef>
    <defName>MakeBulkScrubnites</defName>
    <label>Make Scrubnites in bulk</label>
    <description>Make 5 Scrubnites Injections.</description>
    <jobString>Making Scrubnites injections.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>450</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSAntinites_Vial</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSInjector_Unit</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSUnhook</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSAntinites_Vial</li>
        <li>MSInjector_Unit</li>
        <li>MSUnhook</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSScrubnites>5</MSScrubnites>
    </products>
    <recipeUsers>
      <li>MSStimLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>11</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSAntinites</researchPrerequisite>
  </RecipeDef>
</Defs>
