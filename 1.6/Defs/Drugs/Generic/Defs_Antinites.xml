    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>500</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Luciferium</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSPhenol</li>
            <li>MSSulphuricAcid</li>
            <li>MSHydrochloricAcid</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SmokeleafLeaves</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Luciferium</li>
        <li>MSPhenol</li>
        <li>MSSulphuricAcid</li>
        <li>MSHydrochloricAcid</li>
        <li>SmokeleafLeaves</li>
        <li>MedicineHerbal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSAntinites_Vial>1</MSAntinites_Vial>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
      <li>MSStimLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>9</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSAntinites</researchPrerequisite>
  </RecipeDef>
