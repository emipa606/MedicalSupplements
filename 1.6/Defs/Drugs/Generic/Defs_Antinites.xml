<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ========== Antinites Vial ================ -->
  <ThingDef ParentName="ResourceBase">
    <defName>MSAntinites_Vial</defName>
    <label>Antinites Vial</label>
    <description>Antinites Chemical. Combine with an injector unit to make Antinites Injection</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/Resource/MSAntinites_Vial</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <!-- <drawSize>0.90</drawSize> -->
    </graphicData>
    <stackLimit>150</stackLimit>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>192</MarketValue>
      <!-- Luci: 120, Phenol: 7x2, Smokeleaf: 1.6x5, HerbMed: 10x5 = 192  -->
      <Mass>0.02</Mass>
      <Flammability>0.7</Flammability>
      <DeteriorationRate>3.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>MSManufactured</li>
    </thingCategories>
    <tradeability>None</tradeability>
  </ThingDef>
