  <!-- ========== Antinites ==================== -->
  <ThingDef ParentName="MSDrugInjectBase">
    <defName>MSAntinites</defName>
    <label>Antinites Injection</label>
    <description>Refined from Luciferium this modified concoction of mechanites can be used to attack other unwanted mechanites in the body. Phenol and Smokeleaf are added into this mix to create a toxic effect targeting unwanted nanites in the system. As a result the experience though short lived, for about half a day, can be quite painful. It would be wise to take some form of pain relief prior to or just after using the injection.</description>
    <graphicData>
      <texPath>Things/Item/MSAntinites/MSAntinites</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>20</stackLimit>
    <statBases>
      <MarketValue>532</MarketValue>
      <Mass>0.32</Mass>
      <WorkToMake>100</WorkToMake>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSAntinitesHigh</hediffDef>
          <severity>0.5</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1559</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>DrugLab</li>
        <li>MSStimLab</li>
      </recipeUsers>
      <researchPrerequisite>MSAntinites</researchPrerequisite>
      <skillRequirements>
        <Intellectual>9</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <MSAntinites_Vial>1</MSAntinites_Vial>
      <MSInjector_Unit>1</MSInjector_Unit>
    </costList>
    <tradeability>None</tradeability>
  </ThingDef>
  <HediffDef>
    <defName>MSAntinitesHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Antinites</label>
    <description>Antinites Effect</description>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>0.5</maxSeverity>
    <isBad>false</isBad>
    <lethalSeverity>-1.0</lethalSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <makeImmuneTo>
          <li>FibrousMechanites</li>
          <li>SensoryMechanites</li>
        </makeImmuneTo>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.12</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.07</offset>
          </li>
        </capMods>
      </li>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <minSeverity>0.12</minSeverity>
        <makeImmuneTo>
          <li>FibrousMechanites</li>
          <li>SensoryMechanites</li>
        </makeImmuneTo>
        <painOffset>0.3</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.17</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.12</offset>
          </li>
        </capMods>
      </li>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <minSeverity>0.25</minSeverity>
        <makeImmuneTo>
          <li>FibrousMechanites</li>
          <li>SensoryMechanites</li>
        </makeImmuneTo>
        <painOffset>0.4</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>MSAntinitesThought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSAntinitesHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Antinites</label>
        <description>pain is subsiding</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
      <li>
        <label>Antinites</label>
        <description>pain is reducing</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
      <li>
        <label>Antinites</label>
        <description>body is going through turmoil</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
