    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Luciferium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
