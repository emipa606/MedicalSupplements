  <!-- ========== Metasis ==================== -->
  <ThingDef ParentName="MSDrugInjectBase">
    <defName>MSMetasis</defName>
    <label>Metasis Injection</label>
    <description>Refined from Luciferium this modified concoction of mechanites improve the body's functioning in all respects. Removes the addiction properties of Luciferium as part of the refining process but also removes some of the other benefits. Taken every 7 days.</description>
    <graphicData>
      <texPath>Things/Item/MSMetasis/MSMetasis</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>20</stackLimit>
    <statBases>
      <MarketValue>594</MarketValue>
      <Mass>0.32</Mass>
      <WorkToMake>100</WorkToMake>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSMetasisHigh</hediffDef>
          <severity>7.00</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1510</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>DrugLab</li>
        <li>MSStimLab</li>
      </recipeUsers>
      <researchPrerequisite>MSMetasis</researchPrerequisite>
      <skillRequirements>
        <Intellectual>9</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <MSMetasis_Vial>1</MSMetasis_Vial>
      <MSInjector_Unit>1</MSInjector_Unit>
    </costList>
    <tradeability>None</tradeability>
  </ThingDef>
  <HediffDef>
    <defName>MSMetasisHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Metasis</label>
    <description>Metasis Effect</description>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>7.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="MSLHM.HediffCompProperties_HealPermanentWounds" />
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <painFactor>0.85</painFactor>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>MSMetasisTHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSMetasisHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Metasis</label>
        <description>Feeling rejuvinated.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
