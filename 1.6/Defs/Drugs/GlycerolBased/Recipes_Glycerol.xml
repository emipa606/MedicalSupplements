  <!-- ============= Neutroamine ======================== -->
  <RecipeDef>
    <defName>MakeNeutroFromGlycerol</defName>
    <label>Make Neutroamine</label>
    <description>Make 5 Neutroamine.</description>
    <jobString>Filtering Neutroamine.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>400</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSGlycerol</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSGlycerol</li>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Neutroamine>5</Neutroamine>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>6</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSGlycerol</researchPrerequisite>
  </RecipeDef>
