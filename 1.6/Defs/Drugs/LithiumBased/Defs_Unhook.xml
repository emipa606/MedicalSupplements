<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Unhook ==================== -->
  <ThingDef ParentName="MSDrugPillBase">
    <defName>MSUnhook</defName>
    <label>Unhook</label>
    <description>Unhook is a drug helpful to reduce addiction related issues. There is a chance of forming a mental dependancy. Can be taken every other day.</description>
    <graphicData>
      <texPath>Things/Item/MSUnhook</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>150</stackLimit>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>22.98</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSUnhook_High</hediffDef>
          <severity>2</severity>
          <toleranceChemical>MSMental</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSMental_Tolerance</hediffDef>
          <severity>0.01</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1544</listOrder>
        <chemical>MSMental</chemical>
        <addictiveness>0.01</addictiveness>
        <minToleranceToAddict>0.5</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.10</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSUnhook_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Unhook</label>
    <description>Unhook effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>2.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
      <li Class="MSAddict.HediffCompProperties_MSAddict">
        <AddictionLossPerHour>0.025</AddictionLossPerHour>
        <ToleranceLossPerHour>0.010</ToleranceLossPerHour>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <restFallFactor>1.05</restFallFactor>
        <socialFightChanceFactor>0.95</socialFightChanceFactor>
      </li>
    </stages>
  </HediffDef>
  <!-- =====  Recipes ========= -->
  <RecipeDef>
    <defName>MakeMSUnhook</defName>
    <label>Make Unhook</label>
    <description>Make 1 Unhook</description>
    <jobString>Making Unhook</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>300</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSLithiumSalts</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSHydrochloricAcid</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>MSLithiumSalts</li>
        <li>MSHydrochloricAcid</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSUnhook>1</MSUnhook>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>7</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSLithiumSalts</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeBulkMSUnhook</defName>
    <label>Make Unhook in bulk</label>
    <description>Make 5 Unhook</description>
    <jobString>Making Unhook</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1500</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSLithiumSalts</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSHydrochloricAcid</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>MSLithiumSalts</li>
        <li>MSHydrochloricAcid</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSUnhook>5</MSUnhook>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>8</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSLithiumSalts</researchPrerequisite>
  </RecipeDef>
</Defs>
