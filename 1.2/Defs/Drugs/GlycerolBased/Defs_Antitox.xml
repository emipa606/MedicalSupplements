<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Antitox ==================== -->
  <ThingDef ParentName="MSDrugPillBase">
    <defName>MSAntitox</defName>
    <label>Antitox</label>
    <description>Antitoxin pills. Taken every 3 days.</description>
    <graphicData>
      <texPath>Things/Item/MSAntitox</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>30</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSAntitox_High</hediffDef>
          <severity>3</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1511</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSAntitox_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Antitox</label>
    <description>Antitox Effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>3.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <ToxicSensitivity>-0.55</ToxicSensitivity>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.03</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!-- Recipes -->
  <RecipeDef>
    <defName>MakeAntitoxin</defName>
    <label>Make Antitox</label>
    <description>Make Antitox tablets.</description>
    <jobString>Making Antitox.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>200</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawFungus</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSGlycerol</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>RawFungus</li>
        <li>MSGlycerol</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSAntitox>1</MSAntitox>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>5</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSAntitox</researchPrerequisite>
  </RecipeDef>
  <!-- ===== Bulk Recipe ========= -->
  <RecipeDef>
    <defName>MakeBulkAntitoxin</defName>
    <label>Make Antitox in bulk</label>
    <description>Make 5 Antitox tablets.</description>
    <jobString>Making Antitox.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>950</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawFungus</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSGlycerol</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>RawFungus</li>
        <li>MSGlycerol</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSAntitox>5</MSAntitox>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>6</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSAntitox</researchPrerequisite>
  </RecipeDef>
</Defs>
