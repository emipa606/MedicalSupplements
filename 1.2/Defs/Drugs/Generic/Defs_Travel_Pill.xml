<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Travel Pill ==================== -->
  <ThingDef ParentName="MSDrugPillBase">
    <defName>MSTravelPill</defName>
    <label>Travel Pill</label>
    <description>A travel pill that has mild effects to improve physical capabilities, slightly suppresses hunger, makes you feel less uneasy, but makes you tire slightly faster. Effects last for 5 days.</description>
    <graphicData>
      <texPath>Things/Item/MSTravelPill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>14.06</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>HedMSTravelPill</hediffDef>
          <severity>5</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1613</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>HedMSTravelPill</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Travel pill effect</label>
    <description>Travel pill effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>5.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <restFallFactor>1.07</restFallFactor>
        <hungerRateFactorOffset>-0.1</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.03</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.02</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.02</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.03</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.03</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>ThoughtMSTravelPill</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>HedMSTravelPill</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Travel Pill</label>
        <description>Travel pills make me feel more settled.</description>
        <baseMoodEffect>+2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <!-- ===== Recipes ========= -->
  <RecipeDef>
    <defName>MakeMSTravelPills</defName>
    <label>Make Travel pills</label>
    <description>Make 5 Travel tablets.</description>
    <jobString>Making Travel Pills</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1500</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSGlycerol</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSHydrochloricAcid</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSLithiumSalts</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>MSGlycerol</li>
        <li>MSHydrochloricAcid</li>
        <li>MSLithiumSalts</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSTravelPill>5</MSTravelPill>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>7</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSTravelPill</researchPrerequisite>
  </RecipeDef>
