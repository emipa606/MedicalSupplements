<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Rimedicrem ==================== -->
  <ThingDef ParentName="MSDrugCreamBase">
    <defName>MSRimedicrem</defName>
    <label>Rimedicrem</label>
    <description>Rimedicrem is a strong sterilizing agent with antibacterial properties that can be applied every 2 days. It provides an immunity from wounds getting infected and helps with already infected wounds.</description>
    <graphicData>
      <texPath>Things/Item/MSRimedicrem</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>250</WorkToMake>
      <MarketValue>23</MarketValue>
      <Mass>0.10</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSRimedicrem_High</hediffDef>
          <severity>2.5</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1588</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSRimedicrem_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Rimedicrem</label>
    <description>Rimedicrem effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>2.5</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <makeImmuneTo>
          <li>WoundInfection</li>
        </makeImmuneTo>
        <statOffsets>
          <ToxicSensitivity>-0.05</ToxicSensitivity>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  <!-- ====== Recipes ====== -->
  <RecipeDef>
    <defName>MakeRimedicrem</defName>
    <label>Make Rimedicrem</label>
    <description>Make Rimedicrem.</description>
    <jobString>Making Rimedicrem</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>250</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSPhenol</li>
            <li>MSSulphuricAcid</li>
            <li>MSHydrochloricAcid</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
        <li>Neutroamine</li>
        <li>MSPhenol</li>
        <li>MSSulphuricAcid</li>
        <li>MSHydrochloricAcid</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSRimedicrem>1</MSRimedicrem>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>8</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSRimedicrem</researchPrerequisite>
  </RecipeDef>
