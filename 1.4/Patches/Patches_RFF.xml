<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Fertile Fields [1.1]</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeMSMercurySalts" or defName="MakeMSMercurySaltsBlocks"]/recipeUsers</xpath>
          <value>
            <li>RockMill</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeMSSulphur" or defName="MakeMSSulphurBlocks"]/recipeUsers</xpath>
          <value>
            <li>RockMill</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>