<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Aspirin ==================== -->
  <ThingDef ParentName="MakeableDrugBase">
    <defName>MSAspirin</defName>
    <label>Aspirin</label>
    <description>A mild pain medication that can be used to prevent the process of blocking of the arteries. Taken every 2 days.</description>
    <graphicData>
      <texPath>Things/Item/MSAspirin</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <thingCategories Inherit="false">
      <li>MSDrugs</li>
    </thingCategories>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>22</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <foodType>Processed</foodType>
      <baseIngestTicks>80</baseIngestTicks>
      <ingestSound>Ingest_Pill</ingestSound>
      <ingestCommandString>Take {0}</ingestCommandString>
      <ingestReportString>Taking {0}.</ingestReportString>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSAspirin_High</hediffDef>
          <severity>2</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>MSAspirin</researchPrerequisite>
      <skillRequirements>
        <Intellectual>4</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Neutroamine>1</Neutroamine>
      <MSGlycerol>1</MSGlycerol>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1505</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSAspirin_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Aspirin</label>
    <description>Aspirin effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>2.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <makeImmuneTo>
          <li>HeartArteryBlockage</li>
        </makeImmuneTo>
        <painFactor>0.75</painFactor>
      </li>
    </stages>
  </HediffDef>
  <!-- ===== Bulk Recipe ========= -->
  <RecipeDef>
    <defName>MakeBulkAspirin</defName>
    <label>Make Aspirin in bulk</label>
    <description>Make 5 Aspirin tablets.</description>
    <jobString>Making Aspirin.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>950</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MSGlycerol</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>MSGlycerol</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSAspirin>5</MSAspirin>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>5</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSAspirin</researchPrerequisite>
  </RecipeDef>
</Defs>
