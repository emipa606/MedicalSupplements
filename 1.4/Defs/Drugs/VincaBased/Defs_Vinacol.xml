<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Vinacol ==================== -->
  <ThingDef ParentName="MSDrugPillBase">
    <defName>MSVinacol</defName>
    <label>Vinacol</label>
    <description>Vinacol pills. A chemotherapy drug taken every 4 days.</description>
    <graphicData>
      <texPath>Things/Item/MSVinacol</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>34.2</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSVinacol_High</hediffDef>
          <severity>4</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1571</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSVinacol_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Vinacol</label>
    <description>Vinacol effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>4.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <statOffsets>
          <ImmunityGainSpeed>-0.10</ImmunityGainSpeed>
        </statOffsets>
        <restFallFactor>1.1</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.03</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>2.0</minSeverity>
        <lifeThreatening>false</lifeThreatening>
        <statOffsets>
          <ImmunityGainSpeed>-0.15</ImmunityGainSpeed>
        </statOffsets>
        <restFallFactor>1.15</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.04</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.03</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>3.3</minSeverity>
        <lifeThreatening>false</lifeThreatening>
        <statOffsets>
          <ImmunityGainSpeed>-0.20</ImmunityGainSpeed>
        </statOffsets>
        <restFallFactor>1.2</restFallFactor>
        <vomitMtbDays>15</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!-- Recipes -->
  <RecipeDef>
    <defName>MakeMSVinacol</defName>
    <label>Make Vinacol</label>
    <description>Make Vinacol tablets.</description>
    <jobString>Making Vinacol</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>200</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSVincaAlkaloid</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSVincaAlkaloid</li>
        <li>Neutroamine</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSVinacol>1</MSVinacol>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>7</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSVinacol</researchPrerequisite>
  </RecipeDef>
  <!-- ===== Bulk Recipe ========= -->
  <RecipeDef>
    <defName>MakeBulkMSVinacol</defName>
    <label>Make Vinacol in bulk</label>
    <description>Make 5 Vinacol tablets.</description>
    <jobString>Making Vinacol</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MSVincaAlkaloid</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MSVincaAlkaloid</li>
        <li>Neutroamine</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MSVinacol>5</MSVinacol>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>8</Intellectual>
    </skillRequirements>
    <researchPrerequisite>MSVinacol</researchPrerequisite>
  </RecipeDef>
</Defs>
