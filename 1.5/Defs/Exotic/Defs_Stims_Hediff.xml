<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>MSBattleStim_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>BattleStim</label>
    <description>BattleStim effect</description>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>0.5</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
      <li Class="MSRegen.HediffCompProperties_MSRegen">
        <RegenHoursMin>1</RegenHoursMin>
        <RegenHoursMax>1</RegenHoursMax>
        <RegenHealVal>50</RegenHealVal>
      </li>
    </comps>
    <hediffGivers>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <minSeverity>0.25</minSeverity>
        <baseMtbDays>60</baseMtbDays>
        <partsToAffect>
          <li>Kidney</li>
        </partsToAffect>
      </li>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <minSeverity>0.25</minSeverity>
        <baseMtbDays>60</baseMtbDays>
        <partsToAffect>
          <li>Liver</li>
        </partsToAffect>
      </li>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>MSBattleStim_Low</hediff>
        <minSeverity>0.25</minSeverity>
        <baseMtbDays>3</baseMtbDays>
      </li>
    </hediffGivers>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <painFactor>0.75</painFactor>
        <statOffsets>
          <PsychicSensitivity>-0.25</PsychicSensitivity>
        </statOffsets>
        <restFallFactor>0.5</restFallFactor>
        <hungerRateFactorOffset>-0.3</hungerRateFactorOffset>
        <socialFightChanceFactor>1.2</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.35</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>MSBattleStim_Thought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSBattleStim_High</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Battle stimmed</label>
        <description>Extremely Invigorated</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <HediffDef>
    <defName>MSBattleStim_Low</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>BattleStim Regression</label>
    <description>BattleStim Regression effect</description>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>0.75</maxSeverity>
    <initialSeverity>0.75</initialSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <PsychicSensitivity>+0.12</PsychicSensitivity>
        </statOffsets>
        <restFallFactor>1.25</restFallFactor>
        <hungerRateFactorOffset>0.3</hungerRateFactorOffset>
        <socialFightChanceFactor>1.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>MSBattleStimLow_Thought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSBattleStim_Low</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Battle stim regression</label>
        <description>Feeling bad due to stim regression effects</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
