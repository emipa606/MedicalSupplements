<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Building -->
  <ThingDef ParentName="BuildingBase">
    <defName>MSDrugMixer</defName>
    <label>Drug Chemical Mixer</label>
    <description>A machine for preparing drug precursor elements:\n\n\nNeutroamine: Chemfuel and Glycerol.\n\nGlycerol: Chemfuel and (Beer or Ethanol).\n\nPhenol: Chemfuel.\n\nLithium Salts: Stone Chunks, Chemfuel and (Phenol or Sulphuric Acid).
		\nOpium Latex: Opium Seed Pods.\n\nSulphur: Stone Chunks.\n\nSulphuric Acid: Sulphur.\n\nEthanol: Chemfuel and Sulphuric Acid.\n\nHydrogen Peroxide: Chemfuel, Neutroamine and Sulphuric Acid.
		\nMercury Salts: Stone Chunks\n\nEthyl Mercury: Chemfuel and Mercury Salts.</description>
    <thingClass>MSDrugMix.Building_MSDrugMix</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/MSDrugMixer/MSDrugMixer</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <blockWind>false</blockWind>
    <fillPercent>0.75</fillPercent>
    <pathCost>85</pathCost>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>350</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
    <!--
    <building>

    </building>
	-->
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <size>(4,2)</size>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <socialPropernessMatters>false</socialPropernessMatters>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <hasInteractionCell>false</hasInteractionCell>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <designationHotKey>Misc6</designationHotKey>
    <canOverlapZones>false</canOverlapZones>
    <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>MSDrugMixer</li>
    </researchPrerequisites>
  </ThingDef>
