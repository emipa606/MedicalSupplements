<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =========== Clarity ==================== -->
  <ThingDef ParentName="MSDrugPillBase">
    <defName>MSClarity</defName>
    <label>Clarity</label>
    <description>Clarity is an antipsychotic and nootropic drug. Take every 5 days.</description>
    <graphicData>
      <texPath>Things/Item/MSClarity</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>37.28</MarketValue>
      <Mass>0.03</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MSClarity_High</hediffDef>
          <severity>5</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1542</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>MSClarity_High</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Clarity</label>
    <description>Clarity effect</description>
    <defaultLabelColor>(0.35, 0.58, 0.93)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>5.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <!--
				<makeImmuneTo>
					<li>Alzheimers</li>
					<li>Dementia</li>
		  		</makeImmuneTo>
				-->
        <statOffsets>
          <GlobalLearningFactor>+0.08</GlobalLearningFactor>
          <ResearchSpeed>+0.04</ResearchSpeed>
          <PsychicSensitivity>-0.15</PsychicSensitivity>
          <MentalBreakThreshold>-0.15</MentalBreakThreshold>
        </statOffsets>
        <restFallFactor>1.12</restFallFactor>
        <socialFightChanceFactor>0.95</socialFightChanceFactor>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <lifeThreatening>false</lifeThreatening>
        <!--
				<makeImmuneTo>
					<li>Alzheimers</li>
					<li>Dementia</li>
		  		</makeImmuneTo>
				-->
        <statOffsets>
          <GlobalLearningFactor>+0.12</GlobalLearningFactor>
          <ResearchSpeed>+0.06</ResearchSpeed>
          <PsychicSensitivity>-0.19</PsychicSensitivity>
          <MentalBreakThreshold>-0.19</MentalBreakThreshold>
        </statOffsets>
        <restFallFactor>1.07</restFallFactor>
        <socialFightChanceFactor>0.85</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>+0.02</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.01</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>1.5</minSeverity>
        <lifeThreatening>false</lifeThreatening>
        <!--
				<makeImmuneTo>
					<li>Alzheimers</li>
					<li>Dementia</li>
		  		</makeImmuneTo>
				-->
        <statOffsets>
          <GlobalLearningFactor>+0.16</GlobalLearningFactor>
          <ResearchSpeed>+0.08</ResearchSpeed>
          <PsychicSensitivity>-0.25</PsychicSensitivity>
          <MentalBreakThreshold>-0.25</MentalBreakThreshold>
        </statOffsets>
        <restFallFactor>1.03</restFallFactor>
        <socialFightChanceFactor>0.80</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>+0.03</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>3.0</minSeverity>
        <lifeThreatening>false</lifeThreatening>
        <!--
				<makeImmuneTo>
					<li>Alzheimers</li>
					<li>Dementia</li>
		  		</makeImmuneTo>
				-->
        <statOffsets>
          <GlobalLearningFactor>+0.20</GlobalLearningFactor>
          <ResearchSpeed>+0.10</ResearchSpeed>
          <PsychicSensitivity>-0.35</PsychicSensitivity>
          <MentalBreakThreshold>-0.35</MentalBreakThreshold>
        </statOffsets>
        <restFallFactor>0.92</restFallFactor>
        <socialFightChanceFactor>0.70</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>+0.05</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.03</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>MSClarity_Thought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MSClarity_High</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Clarity Mood Stabalizer</label>
        <description>Clarity helps to settle a persons thinking.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
      <li>
        <label>Clarity Mood Stabalizer</label>
        <description>Clarity helps to settle a persons thinking.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>Clarity Mood Stabalizer</label>
        <description>Clarity helps to settle a persons thinking.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
      <li>
        <label>Clarity Mood Stabalizer</label>
        <description>Clarity helps to settle a persons thinking.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
